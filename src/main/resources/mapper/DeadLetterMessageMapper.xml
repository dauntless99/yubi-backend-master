<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yupi.springbootinit.mapper.DeadLetterMessageMapper">

    <resultMap id="BaseResultMap" type="com.yupi.springbootinit.model.entity.DeadLetterMessage">
        <id property="id" column="id" jdbcType="INTEGER"/>
        <result property="messageContent" column="messageContent" jdbcType="VARCHAR"/>
        <result property="createTime" column="createTime" jdbcType="TIMESTAMP"/>
        <result property="updateTime" column="updateTime" jdbcType="TIMESTAMP"/>
        <result property="status" column="status" jdbcType="INTEGER"/>
        <result property="isDelete" column="isDelete" jdbcType="TINYINT"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, messageContent, createTime, status, isDelete
    </sql>

    <!-- MyBatis XML 映射文件中的 SQL -->
    <select id="listByStatusAndTime" resultMap="BaseResultMap">
        SELECT
            id,
            messageContent,
            createTime,
            updateTime,
            status,
            isDelete
        FROM
            dead_letter_message
        WHERE
            status = #{status}
          AND createTime >= #{threeDaysAgo}
        ORDER BY
            createTime ASC
    </select>
</mapper>
